#!/usr/bin/env zsh

# Default off_project hook - users can override this function
off_project_hook() {
    local project_root="$1"
    shift
    local markers=("$@")

    # Clear environment variables
    unset HOOKIE_CURRENT_PROJECT
    unset HOOKIE_PROJECT_ROOT
    unset HOOKIE_PROJECT_MARKERS

    # Default behavior: simple notification
    echo "ðŸ‘‹ Left project: ${project_root:t}"

    # Example cleanup (uncomment/modify as needed):

    # Restore original prompt
    # PS1="${PS1#%F{green}[*]%f }"

    # Deactivate Python virtual environment
    # [[ -n "$VIRTUAL_ENV" ]] && deactivate 2>/dev/null

    # Reset to default Node.js version
    # command -v nvm >/dev/null && nvm use default 2>/dev/null
}
